////__________________________________________________ Default reward_times_default
sub stinvec_wlrc_mod_PT_norm()
{
	RewardTierTime(720); 	// 0 tier time (s) - the best one 
	RewardTierTime(1350); 	// 1 tier time (s)
	RewardTierTime(2250); 	// 2 tier time (s)
	RewardTierTime(3600); 	// 3 tier time (s)
	RewardTierTime(4500); 	// 4 tier time (s)
	RewardTierTime(5400); 	// 5 tier time (s)

	RewardRoomTimes(90, 75, 60, 45); // how much time do we have to get the reward per coop team size
	//1,2,3,4
}

