////////////////////////////////////////////////////

////__________________________________________________ Default reward_times_default
sub stinvec_wlrc_mod_PT_norm()
{
	RewardTierTime(86400); 	// 0 tier time (s) - the best one 
	RewardTierTime(86400); 	// 1 tier time (s)
	RewardTierTime(86400); 	// 2 tier time (s)
	RewardTierTime(86400); 	// 3 tier time (s)
	RewardTierTime(86400); 	// 4 tier time (s)
	RewardTierTime(86400); 	// 5 tier time (s)

	RewardRoomTimes(86400, 86400, 86400, 86400); // how much time do we have to get the reward per coop team size
	//1,2,3,4
}

